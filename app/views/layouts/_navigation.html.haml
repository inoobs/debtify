%nav.navbar.navbar-dark.bg-primary.navbar-fixed-top
  .container
    %button.navbar-toggler.hidden-sm-up.pull-right.collapsed{ 'data-target' => '#navcollapse1', 'data-toggle' => 'collapse', type: 'button' } &#9776;
    #navcollapse1.collapse.navbar-toggleable-xs
      = link_to root_path, class: 'navbar-brand hidden-sm-down' do
        %h1 Debtify
      #navbar-scroll
        %ul.nav.navbar-nav.pull-sm-right
          - if current_user
            %li.nav-item
              = link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-danger page-scroll'
          - else
            %li.nav-item
              = link_to 'Sign up', new_user_registration_path, class: 'btn btn-success'
            %li.nav-item
              = link_to 'Log in', new_user_session_path, class: 'btn btn-success'
